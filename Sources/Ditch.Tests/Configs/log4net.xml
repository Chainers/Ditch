<?xml version="1.0" encoding="utf-8" ?>
<!-- This section contains the log4net configuration settings -->
<log4net debug="false">
  <appender name="ConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
    <mapping>
      <level value="ERROR" />
      <foreColor value="White" />
      <backColor value="Red, HighIntensity" />
    </mapping>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%d [%t] %-5p %c - %m%n" />
    </layout>
  </appender>

  <appender name="LogAll" type="log4net.Appender.RollingFileAppender,log4net">
    <file type="log4net.Util.PatternString" value="../Logs/%date{dd_MM_yyyy}[%processid].log" />
    <encoding value="utf-8" />
    <param name="AppendToFile" value="true" />
    <datePattern value=".yyyy-MM-dd'.txt'" />
    <rollingStyle value="Composite" />
    <maxSizeRollBackups value="100" />
    <maximumFileSize value="2000KB" />
    <staticLogFileName value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="[%date] %-5level %logger{2} - %message %newline" />
    </layout>
  </appender>

  <appender name="UdpAppender" type="log4net.Appender.UdpAppender">
    <remoteAddress value="127.0.0.1" />
    <remotePort value="7071" />
    <layout type="log4net.Layout.XmlLayoutSchemaLog4j" />
  </appender>

  <!-- Setup the root category, add the appenders and set the default level -->
  <root>
    <priority value="ALL" />
    <appender-ref ref="LogAll" />
    <appender-ref ref="UdpAppender"/>
  </root>

</log4net>
