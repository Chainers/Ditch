<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Glass.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style  x:Key="MainStackPanel" TargetType="StackPanel">
        <Setter Property="Margin" Value="3 0 0 0"/>
        <Setter Property="Orientation" Value="Vertical"/>
    </Style>

    <Style  x:Key="AccauntButtonInfo" BasedOn="{StaticResource Button}" TargetType="Button">
        <Setter Property="ToolTip" Value="Показать"/>
        <Setter Property="Content" Value="i"/>
        <Setter Property="Width" Value="20"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Margin" Value="3 0 0 0"/>
    </Style>

    <Style  x:Key="AccauntSelectedCheckBox" TargetType="CheckBox">
        <Setter Property="ToolTip" Value="Вкличить данные о транзакциях в Анализ"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
    </Style>

</ResourceDictionary>